<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/flashlight"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="39dp">

        <Switch
            android:id="@+id/FlashlightsSwitch"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="145dp"
            android:background="@drawable/backgroundcolors"
            android:capitalize="none"
            android:gravity="center|center_horizontal"
            android:hyphenationFrequency="normal"
            android:onClick="FlashlightVal"
            android:text="Flashlight"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/backgroundcolors"
            android:textDirection="ltr"
            android:textSize="20sp"
            android:textStyle="bold"
            android:trackTint="@color/white"
            tools:ignore="HardcodedText,UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>